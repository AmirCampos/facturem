<div class="row">
  <div class="container">
    <div class="col-md-6">
      <h3>Filter invoices</h3>
      <div id="filter_box" class="navbar-form navbar-left">
      <%= form_for(:filter, url: root_path, method: 'get', class: "navbar-form navbar-left", role: "search" ) do |f| %>
        <%= f.text_field :filter_text, class: 'form-control', placeholder: "Filter text", id: "ed_filter_text" %>
        <%= f.label :signed, class: "checkbox inline submit_cancel" do %>
          <%= f.check_box :signed, class: 'form-control' %><span>Signed invoices</span>
        <% end %>
        <%= f.label :presented, class: "checkbox inline submit_cancel" do %>
          <%= f.check_box :presented, class: 'form-control' %><span>Presented invoices</span>
        <% end %>
        <p><%= f.submit "Apply filter", class: "btn btn-primary" %></p>
      <% end %>
    </div>
  </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div>
            <%=datagrid_form_for @grid, :method=> :get, :url => invoices_path%>

                <%=paginate(@grid.assets)%>
                    <%=datagrid_table @grid%>
                        <%=paginate(@grid.assets)%>
        </div>
    </div>
</div>
