<% provide(:title, "Signing invoice") %>

<div class="row">
  <div class="container">
  <div class="col-md-6 col-md-offset-3">
    <h3><%=@invoice.customer_name%></h3>
    <h4><%=@invoice.subject%></h4>
    <h4><%=@invoice.total.total_invoice%></h4>
    <%= form_for(:invoice, url: invoices_sign_path) do |f| %>

      <%= f.label :signature %>
      <%= f.password_field :signature, class: 'form-control' %>

      <%= f.submit "Sign", class: "btn btn-danger submit_cancel" %>
      <%=link_to "Cancel", invoice_path(@invoice), class: 'btn btn-default submit_cancel'%>
    <% end %>
    </div>
  </div>
</div>
